extends ../layouts/common.pug
block content
            h1(class='m-3 text-center rounded-pill border border-success text-danger') Products
            
            form(action="/users/search", method="get" class='form-group d-flex clearfix')
                a(href="/users/create" class='btn btn-primary rounded-pill') New

                div.ml-auto.d-flex
                input(type="text" name="name" class=' rounded-pill border border-success ml-2' width='300px' )        
            
                button(type="submit" class='btn btn-primary ml-2 rounded-pill') Search
            div.row
                each val in products              
                    div.col-xl-3.col-md-4.col-sm-5
                        img.card-img-top(src=val.images, alt='...')
                        .card-body
                            h5.card-title #{val.name}
                            p.card-text #{val.description}
                            a.btn.btn-primary(href='/carts/add/'+val.id) Add to cart
                nav(aria-label='Page navigation example')
                    ul.pagination
                        li.page-item
                        a.page-link(href='/products?page='+parseInt(pagepagination-1)) Previous
                        li.page-item
                        a.page-link(href='/products?page='+parseInt(pagepagination-1)) #{pagepagination-1}
                        li.page-item
                        a.page-link(href='/products?page='+parseInt(pagepagination)) #{pagepagination}
                        li.page-item
                        a.page-link(href='/products?page='+parseInt(pagepagination+1)) #{pagepagination+1}
                        li.page-item
                        a.page-link(href='/products?page='+parseInt(pagepagination+1)) Next

